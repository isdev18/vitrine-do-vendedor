# ============================================
# Vitrine do Vendedor - ENVIRONMENT VARIABLES
# ============================================

# Application
APP_NAME=Vitrine do Vendedor
APP_ENV=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/vitrine_honda
DATABASE_ECHO=False

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM_NAME=Vitrine do Vendedor
SMTP_FROM_EMAIL=noreply@vitrinevendedor.com

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Frontend URL (for CORS and emails)
FRONTEND_URL=http://localhost:5500

# Stripe/Payment Gateway (opcional)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# File Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=uploads
